{
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "auto-close-tag.fullMode": true,
  "breadcrumbs.enabled": false,
  "commit-message-editor.view.defaultView": "form",
  "commit-message-editor.view.fullWidth": true,
  "commit-message-editor.view.visibleViews": "form",
  "debug.allowBreakpointsEverywhere": true,
  "debug.console.fontFamily": "JetBrains Mono",
  "debug.console.fontSize": 12,
  "debug.showBreakpointsInOverviewRuler": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.accessibilitySupport": "off",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.codeActionsOnSave": {
    "addMissingImports": true,
    "source.fixAll.eslint": true
  },
  "editor.cursorWidth": 4,
  "editor.detectIndentation": true,
  "editor.dragAndDrop": false, // removes the folding feature
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.glyphMargin": false, // removes the space used mainly for debugging indicators
  "editor.hideCursorInOverviewRuler": true, // hides cursor mark in the overview ruler
  "editor.hover.delay": 200,
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.largeFileOptimizations": true,
  "editor.lineHeight": 18,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false, // removes highlights occurrences (still works when you select a word)
  "editor.overviewRulerBorder": false, // removes border from overview ruler (located on the right, same position as the scrollbar)
  "editor.quickSuggestions": {
    "comments": "on",
    "other": "on",
    "strings": "on"
  },
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "all", // removes line highlight
  "editor.renderWhitespace": "none", // removes whitespace chars
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "explorer.autoReveal": "focusNoScroll",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "filesize.displayInfoOnTheRightSideOfStatusBar": true,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.ignoreRebaseWarning": true,
  "github.copilot.enable": {
    "*": false,
    "markdown": false,
    "plaintext": false,
    "yaml": false
  },
  "gitlens.views.commitDetails.files.layout": "tree",
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "markdown.preview.fontFamily": "Charter",
  "markdown.preview.fontSize": 18,
  "markdown.preview.lineHeight": 1.5,
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.preview.typographer": true,
  "notebook.outline.showCodeCells": true,
  "npm.keybindingsChangedWarningShown": true,
  "outline.collapseItems": "alwaysExpand",
  "outline.icons": true,
  "outline.showClasses": true,
  "outline.showConstants": true,
  "outline.showConstructors": true,
  "outline.showEnums": true,
  "outline.showFunctions": true,
  "outline.showInterfaces": true,
  "outline.showKeys": true,
  "outline.showMethods": true,
  "outline.showModules": true,
  "outline.showNamespaces": true,
  "outline.showNumbers": true,
  "outline.showObjects": true,
  "outline.showOperators": true,
  "outline.showPackages": true,
  "outline.showProperties": true,
  "outline.showStrings": true,
  "outline.showStructs": true,
  "outline.showTypeParameters": true,
  "outline.showVariables": true,
  "prettier.ignorePath": "",
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 80,
  "prettier.resolveGlobalModules": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "projectManager.git.baseFolders": ["/Users/hugo/repos"],
  "rapidapi.terminalLink.enabled": false,
  "redhat.telemetry.enabled": false,
  "search.quickOpen.history.filterSortOrder": "recency",
  "search.showLineNumbers": true,
  "search.sortOrder": "type",
  "security.workspace.trust.untrustedFiles": "open",
  "settingsSync.ignoredSettings": ["projectManager.git.baseFolders"],
  "terminal.external.osxExec": "",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.tabs.location": "left",
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "update.showReleaseNotes": false,
  "vs-browser.url": "http://localhost:3000",
  "window.nativeTabs": false,
  "window.restoreFullscreen": true,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Chrome DevTools",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showIcons": true, // removes icon from opened files in tabs
  "workbench.editor.tabCloseButton": "off", // removes the status bar
  "workbench.enableExperiments": false,
  "workbench.iconTheme": "chalice-icon-theme",
  "workbench.list.smoothScrolling": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.indent": 14,
  "workbench.tree.renderIndentGuides": "none",
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideLineNumbers": true,
  "zenMode.hideStatusBar": true,
  "zenMode.hideTabs": true,
  "zenMode.restore": true,
  "zenMode.silentNotifications": true
}
